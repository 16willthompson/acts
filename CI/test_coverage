#!/usr/bin/env bash
set -e


if ! which python &> /dev/null; then
  echo "python2 not installed. Coverage reporting requires python2"
  exit 1
fi

PYTHON=$(which python)

if [ ! -f CMakeCache.txt ]; then
    echo "Not in CMake build dir. Not executing"
    exit 1
fi

set -x
mkdir -p coverage
$PYTHON ../cmake/gcovr -r . -e '../Tests/' --html --html-details -o coverage/index.html
$PYTHON ../cmake/gcovr -r . -e '../Tests/' --branches

